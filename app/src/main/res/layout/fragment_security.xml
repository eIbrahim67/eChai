<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_color"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".security.SecurityFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:id="@+id/securityBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/click_item_10"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary_white" />

        <!-- Settings Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

        android:text="Security"
            android:textColor="@color/primary_white"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/securityBack"
            app:layout_constraintStart_toEndOf="@id/securityBack"
            app:layout_constraintTop_toTopOf="@id/securityBack" />

        <!-- App Logo with Shadow -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="150dp"
            android:layout_marginTop="30dp"
            android:layout_height="150dp"
            android:src="@drawable/hi_v2"
            android:background="@drawable/click_item_circle"
            android:backgroundTint="@color/primary_white"
            android:contentDescription="@string/dizon_app_logo"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Name with Custom Font and Gradient -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eChai"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary_white"
            android:shadowColor="#80C8E7C7"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@id/appLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Decorative Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/primary_white"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/appName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Description with Basic XML Styling -->
        <TextView
            android:id="@+id/appSecurity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="8dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Version Information with Subtle Style -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textColor="#757575"
            android:textSize="14sp"
            android:textStyle="italic|bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appSecurity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>