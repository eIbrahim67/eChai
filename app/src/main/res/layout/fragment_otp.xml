<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OTP.OTPFragment"
    android:background="@color/primary_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp">

            <ProgressBar
                android:id="@+id/loadingOtp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Progress Indicator -->
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/primary_gray" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/primary_white" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:background="@color/primary_gray" />
            </LinearLayout>

            <!-- Email Icon -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/icon_email_card"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="@color/primary_gray"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/icon_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_email"
                    app:tint="@color/primary_white" />
            </com.google.android.material.card.MaterialCardView>

            <!-- OTP Title -->
            <TextView
                android:id="@+id/title_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto_mono_variable"
                android:text="Enter Your OTP"
                android:textColor="@color/primary_white"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_email_card" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitle_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_mono_variable"
                android:gravity="center"
                android:text="Enter the OTP code we just sent\nyou on your registered Email number"
                android:textColor="@color/primary_white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_otp" />

            <!-- OTP Input Fields -->
            <LinearLayout
                android:id="@+id/otp_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subtitle_otp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/primary_white"
                    app:strokeWidth="2dp">

                    <EditText
                        android:id="@+id/otp_digit_1"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@color/primary_gray"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/primary_white"
                        android:textColorHint="@color/primary_white"
                        android:textSize="24sp" />


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/primary_white"
                    app:strokeWidth="2dp">

                    <EditText
                        android:id="@+id/otp_digit_2"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@color/primary_gray"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/primary_white"
                        android:textColorHint="@color/primary_white"
                        android:textSize="24sp" />


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/primary_white"
                    app:strokeWidth="2dp">

                    <EditText
                        android:id="@+id/otp_digit_3"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@color/primary_gray"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/primary_white"
                        android:textColorHint="@color/primary_white"
                        android:textSize="24sp" />


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/primary_white"
                    app:strokeWidth="2dp">

                    <EditText
                        android:id="@+id/otp_digit_4"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@color/primary_gray"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/primary_white"
                        android:textColorHint="@color/primary_white"
                        android:textSize="24sp" />


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/primary_white"
                    app:strokeWidth="2dp">

                    <EditText
                        android:id="@+id/otp_digit_5"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@color/primary_gray"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/primary_white"
                        android:textColorHint="@color/primary_white"
                        android:textSize="24sp" />


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="@color/primary_white"
                    app:strokeWidth="2dp">

                    <EditText
                        android:id="@+id/otp_digit_6"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@color/primary_gray"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/primary_white"
                        android:textColorHint="@color/primary_white"
                        android:textSize="24sp" />


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/primary_gray"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:text="Reset Password"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/otp_container"
                app:strokeColor="@color/primary_white"
                app:strokeWidth="1dp" />

            <!-- Resend OTP -->
            <TextView
                android:id="@+id/tv_resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Didn't get OTP ?"
                android:textColor="@color/primary_white"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView13"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_reset_password" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Resend OTP"
                android:textColor="@color/primary_white"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_resend_otp"
                app:layout_constraintTop_toBottomOf="@+id/btn_reset_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>