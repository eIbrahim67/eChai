<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:padding="10dp"
    tools:context=".personalization.PersonalizationFragment">

    <ImageView
        android:id="@+id/personalizationBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/click_item_10"
        android:clickable="true"
        android:contentDescription="Back"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_white" />

    <!-- Settings Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Personalization"
        android:textColor="@color/primary_white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/personalizationBack"
        app:layout_constraintStart_toEndOf="@id/personalizationBack"
        app:layout_constraintTop_toTopOf="@id/personalizationBack" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memoryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/click_item_10"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/personalizationBack">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:src="@drawable/ic_personalization"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary_white" />

        <TextView
            style="@style/SettingsButton"
            android:layout_width="0dp"
            android:layout_marginStart="12dp"
            android:text="Memory"
            android:textColor="@color/primary_white"
            app:layout_constraintBottom_toBottomOf="@id/icon1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon1"
            app:layout_constraintTop_toTopOf="@id/icon1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instructionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/click_item_10"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/memoryBtn">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:src="@drawable/ic_instructions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary_white" />

        <TextView
            style="@style/SettingsButton"
            android:layout_width="0dp"
            android:layout_marginStart="12dp"
            android:text="Custom Instructions"
            android:textColor="@color/primary_white"
            app:layout_constraintBottom_toBottomOf="@id/icon2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon2"
            app:layout_constraintTop_toTopOf="@id/icon2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

